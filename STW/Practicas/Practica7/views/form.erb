<form>
    <input class='span12' id='msg' placeholder='type message here...' />
    <input class='btn btn-primary' type='submit' value='Enviar' />
</form>

<script>
// writing
   $("form").live("submit", function(e) {
      $.post('/', {msg: "<%= user %>: " + $('#msg').val()});
      $('#msg').val(''); $('#msg').focus();
      e.preventDefault();
   });
</script>